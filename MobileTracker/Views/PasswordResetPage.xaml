<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileTracker.Views.PasswordResetPage">
    <VerticalStackLayout Padding="30" Spacing="20">
        <Label Text="Reset Your Password" FontSize="32" HorizontalOptions="Center" />

        <Label Text="Enter your new password below. Make sure it's at least 8 characters long and contains both letters and numbers."
               FontSize="14" TextColor="Gray" HorizontalOptions="Center" />

        <Entry Text="{Binding NewPassword}" Placeholder="New Password" IsPassword="True" />
        <Entry Text="{Binding ConfirmPassword}" Placeholder="Confirm New Password" IsPassword="True" />

        <Button Text="Reset Password" Command="{Binding ResetPasswordCommand}" />

        <Label Text="{Binding ErrorMessage}" TextColor="Red" IsVisible="{Binding HasError}" />
        <Label Text="{Binding SuccessMessage}" TextColor="Green" IsVisible="{Binding HasSuccessMessage}" />

        <Button Text="Back to Login" Command="{Binding GoToLoginCommand}" BackgroundColor="Transparent" TextColor="Blue" />

        <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" />
    </VerticalStackLayout>
</ContentPage>